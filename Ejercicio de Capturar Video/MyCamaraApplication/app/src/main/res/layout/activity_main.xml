<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_camera_app"
    tools:context="com.example.crisly_pc.mycamaraapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:text="Record Video"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:id="@+id/recordButton"
        app:layout_constraintLeft_toLeftOf="@+id/activity_camera_app"
        app:layout_constraintTop_toTopOf="@+id/activity_camera_app"
        app:layout_constraintRight_toRightOf="@+id/activity_camera_app"
        app:layout_constraintBottom_toBottomOf="@+id/activity_camera_app"
        android:onClick="startRecording" />


</android.support.constraint.ConstraintLayout>
